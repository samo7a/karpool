    "firebase-functions": "^3.14.1",
    "reflect-metadata": "^0.1.13",
    "stripe": "^8.171.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "typescript": "^3.9.10"
